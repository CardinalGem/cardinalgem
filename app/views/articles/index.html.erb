<p style="color: green"><%= notice %></p>

<h1>CardinalGem</h1>

<div id="articles" class="container-fluid">
  <% @articles.each do |article| %>
		<div class="card">
	  	<div class="card-body">
    		<%= render article %>
			</div>
		</div>
		
    <button type="button" class="btn btn-primary">
      <%= button_to "Show this article", article %>
		</button>
  <% end %>
</div>

<%= button_to "New article", new_article_path %>
