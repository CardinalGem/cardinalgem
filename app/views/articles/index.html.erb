<p style="color: green"><%= notice %></p>

<div class="container-fluid"><h1>Cardinal Gem</h1></div>

<div id="articles" class="container-fluid">
  <% @articles.each do |article| %>
		<div class="card border-danger" style="border-width: 2px; background-color: #f6f3f3">
	  	<div class="card-body">
    		<%= render article %>
			</div>
			<span class="align-middle"><%= link_to "Show this article", article %></span>
		</div>
		<br>
  <% end %>
	<span class="align-middle"><%= link_to "New article", new_article_path %></span>
</div>

